# 应用配置
APP_NAME=声纹识别系统
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 数据库配置
DATABASE_URL=mysql+asyncmy://voiceprint:password123@localhost:3306/voiceprint_system

# MinIO对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=voiceprint-audio
MINIO_SECURE=false

# 声纹识别配置
VOICEPRINT_MODEL=speechbrain/spkrec-ecapa-voxceleb
VOICEPRINT_THRESHOLD=0.75
AUDIO_QUALITY_THRESHOLD=0.6
MIN_AUDIO_DURATION=3.0
MAX_AUDIO_DURATION=30.0
SAMPLE_RATE=16000

# 情绪识别配置
EMOTION_MODEL=speechbrain/emotion-recognition-wav2vec2-IEMOCAP
EMOTION_CONFIDENCE_THRESHOLD=0.6
SUPPORTED_EMOTIONS=neutral,happy,sad,angry,fear,disgust,surprise
EMOTION_ANALYSIS_ENABLED=true

# 微信小程序配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# JWT认证配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# 文件上传配置
UPLOAD_DIR=uploads
TEMP_DIR=temp
MAX_FILE_SIZE=52428800

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log