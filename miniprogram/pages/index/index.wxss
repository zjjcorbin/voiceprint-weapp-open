.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.welcome .greeting {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.welcome .subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-prompt .greeting {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.login-prompt .subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 功能卡片 */
.function-cards {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.card-icon image {
  width: 48rpx;
  height: 48rpx;
}

.voiceprint-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.verify-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.meeting-icon {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.quick-verify {
  background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%);
  color: white;
}

.quick-icon {
  background: rgba(255, 255, 255, 0.2);
}

.quick-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.card-content {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-verify .card-title {
  color: white;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.quick-verify .card-desc {
  color: rgba(255, 255, 255, 0.8);
}

.card-arrow {
  font-size: 32rpx;
  color: #999;
}

.quick-verify .card-arrow {
  color: white;
}

/* 状态区域 */
.status-section {
  margin: 0 30rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.status-cards {
  display: flex;
  justify-content: space-between;
}

.status-card {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin: 0 8rpx;
}

.status-card:first-child {
  margin-left: 0;
}

.status-card:last-child {
  margin-right: 0;
}

.status-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.status-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-value.success {
  color: #52c41a;
}

.status-value.pending {
  color: #faad14;
}

/* 最近活动 */
.recent-section {
  margin: 0 30rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.more {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: normal;
}

.activity-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.activity-icon.verify {
  background: #52c41a;
}

.activity-icon.meeting {
  background: #1890ff;
}

.activity-content {
  flex: 1;
}

.activity-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.activity-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.activity-result {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.activity-result.success {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.activity-result.fail {
  background: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffb3b3;
}

/* 快捷操作按钮 */
.quick-actions {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.action-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  background: linear-gradient(135deg, #007AFF 0%, #00C6FF 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 32rpx rgba(0, 122, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.3);
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%);
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.3);
}

.action-btn.primary:active {
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
}

.btn-content {
  display: flex;
  align-items: center;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

/* 登录按钮 */
.login-section {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  background: #07C160;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

/* 录音状态弹窗 */
.recording-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  text-align: center;
  color: white;
}

.recording-animation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.wave {
  width: 20rpx;
  height: 80rpx;
  background: #007AFF;
  margin: 0 8rpx;
  border-radius: 10rpx;
  animation: wave 1.2s infinite ease-in-out;
}

.wave:nth-child(2) {
  animation-delay: -0.1s;
}

.wave:nth-child(3) {
  animation-delay: -0.2s;
}

@keyframes wave {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

.recording-text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.recording-tip {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}